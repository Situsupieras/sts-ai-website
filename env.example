# ===========================================
# CONFIGURACIÓN DE ANALYTICS
# ===========================================

# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Facebook Pixel
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=XXXXXXXXXX

# LinkedIn Insight Tag
NEXT_PUBLIC_LINKEDIN_ID=XXXXXXXXXX

# ===========================================
# INTEGRACIÓN CRM
# ===========================================

# URL de la API del CRM
NEXT_PUBLIC_CRM_API_URL=https://api.tu-crm.com

# API Key del CRM
NEXT_PUBLIC_CRM_API_KEY=tu-api-key-secreta

# ===========================================
# SERVICIOS EXTERNOS
# ===========================================

# GeoIP Service (para personalización por ubicación)
NEXT_PUBLIC_GEOIP_API_KEY=tu-geoip-api-key

# Email Service (SendGrid, Mailgun, etc.)
EMAIL_SERVICE_API_KEY=tu-email-api-key
EMAIL_SERVICE_DOMAIN=tu-dominio.com

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================

# URL base de la aplicación
NEXT_PUBLIC_APP_URL=https://si-tus-supieras-ai.com

# Entorno de desarrollo
NODE_ENV=development

# Puerto del servidor de desarrollo
PORT=3000

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================

# Base de datos principal
DATABASE_URL=postgresql://usuario:password@localhost:5432/sts_ai_db

# Base de datos de caché (Redis)
REDIS_URL=redis://localhost:6379

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================

# JWT Secret
JWT_SECRET=tu-jwt-secret-super-seguro

# CORS Origins
CORS_ORIGINS=https://si-tus-supieras-ai.com,https://www.si-tus-supieras-ai.com

# ===========================================
# CONFIGURACIÓN DE CLOUD
# ===========================================

# AWS S3 (para almacenamiento de archivos)
AWS_ACCESS_KEY_ID=tu-aws-access-key
AWS_SECRET_ACCESS_KEY=tu-aws-secret-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=sts-ai-assets

# Cloudflare (para CDN)
CLOUDFLARE_API_TOKEN=tu-cloudflare-token
CLOUDFLARE_ZONE_ID=tu-zone-id

# ===========================================
# CONFIGURACIÓN DE MONITOREO
# ===========================================

# Sentry (para monitoreo de errores)
SENTRY_DSN=https://tu-sentry-dsn@sentry.io/project-id

# LogRocket (para sesiones de usuario)
NEXT_PUBLIC_LOGROCKET_APP_ID=tu-logrocket-app-id

# ===========================================
# CONFIGURACIÓN DE MARKETING
# ===========================================

# HubSpot
HUBSPOT_API_KEY=tu-hubspot-api-key
HUBSPOT_PORTAL_ID=tu-portal-id

# Mailchimp
MAILCHIMP_API_KEY=tu-mailchimp-api-key
MAILCHIMP_LIST_ID=tu-list-id

# ===========================================
# CONFIGURACIÓN DE PAGOS
# ===========================================

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_tu-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_tu-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_tu-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=tu-paypal-client-id
PAYPAL_CLIENT_SECRET=tu-paypal-client-secret

# ===========================================
# CONFIGURACIÓN DE INTEGRACIONES
# ===========================================

# Slack (para notificaciones)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/tu-webhook

# Zapier
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/tu-webhook

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================

# Debug mode
DEBUG=true

# Log level
LOG_LEVEL=info

# ===========================================
# INSTRUCCIONES DE USO
# ===========================================

# 1. Copia este archivo como .env.local
# 2. Reemplaza todos los valores con tus configuraciones reales
# 3. Nunca subas el archivo .env.local al repositorio
# 4. Para producción, configura las variables en tu plataforma de hosting

# Variables requeridas para desarrollo básico:
# - NEXT_PUBLIC_GA_ID
# - NEXT_PUBLIC_APP_URL
# - NODE_ENV

# Variables requeridas para producción:
# - Todas las variables de analytics
# - Configuración de CRM
# - Configuración de email
# - Configuración de seguridad 